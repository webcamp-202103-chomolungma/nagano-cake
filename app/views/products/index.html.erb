
  <h2>商品一覧</h2>

  <table class="table table-inverse">
    <thead>
      <tr>
        <th>写真</th>
        <th>商品名</th>
        <th>値段</th>
      </tr>
    </thead>

    <% @products.each do |product| %>
      <tr>
        <td>
          <%= attachment_image_tag product, :image, :fill, 60, 60, fallback: "no_image.jpg",size:"40x40" %>
        </td>

        <td>
          <%= link_to product.name,product_path(product.id) %>
        </td>

        <td>
          ￥<%= product.price %>
        </td>


        <td>
          <%#= product.is_active %>
                    <% if product.is_active == true %>
            販売中
          <% else %>
            販売停止中
          <% end %>
        </td>
      </tr>
    <% end %>

    <%= paginate @products %>

  </table>

