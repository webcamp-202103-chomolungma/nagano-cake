<div class="container">
    <div class="row">
      <div class="col-auto mx-auto">
        <h3><p class="text-left">配送先登録/一覧</p></h3>
          <!-- form_with部分 -->
          <%= form_with model: @address,url:'/addresses', local:true do |f| %>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <div class="field">
                    <%= f.label :郵便番号（ハイフン無し） %>
                    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
                  </div>
                  <div class="field">
                    <%= f.label :住所 %>
                    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
                  </div>
                  <div class="field">
                    <%= f.label :名前 %>
                    <%= f.text_field :name, autofocus: true %><%= f.submit '新規登録' %>
                  </div>
                </tr>
               </thead>
            </table>
          <% end %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <% @addresses.each do |address| %>
              <td> <%= address.postal_code %> </td>
              <td> <%= address.address %> </td>
              <td> <%= address.name %> </td>
            <% end %>
          </tr>
            <td>  </td>
            <p><strong>郵便番号(ハイフンなし)</strong>
            <strong>住所</strong>
            <strong>宛名</strong></p>
          </tr>
            <td>  </td>

          </tr>
            <th colspan="3"></th>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>
