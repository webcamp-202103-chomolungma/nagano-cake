<h2>ヘッダー（仮）</h2>
<%= link_to "商品一覧ページリンク",admin_products_path %>


<h2 class="mt-3">商品新規登録</h2>
      <%= form_with model: @product,url: admin_products_path,local: true do |f|%>
      <div class="form-group">
        <label for="product_image">商品画像</label>
          <%= f.attachment_field :image, class: "form-control-file" %>
      </div>
      <div class="form-group">
        <label for="product_name">商品名</label>
          <%= f.text_field :name, placeholder: "商品名", autofocus: true %>
      </div>
      <div class="form-group">
        <label for="product_introduction">商品説明</label>
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
      </div>

      <div class="form-group">
        ジャンルは工事中のためスルーで
        <%= f.collection_select :genre_id, Genre.all, :id, :name %>
        <%#= f.collection_select %>
        <%#= f.seletct :method,:model?? ,options_for("ケーキ","ドーナツ") %>
      </div>
        <%#= form.label :genre %>
      　<%#= form.select :genre, ['ケーキ', 'シュークリーム', 'エクレア'], {include_blank: '---'} %>

      <div class="form-group">
        <label for="price">税抜価格</label>
        <%= f.text_field :price, placeholder: "1000" %>円
      </div>

      <div class="form-group">
        <%= f.radio_button :is_active, :true, checked: true %>
        <%= f.label :is_active, "販売中", value: true %>

        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中", value: :false %>
      </div>

    <div class="form-group">
      <%= f.submit '新規登録', class: "btn btn-success" %>
  　<div class="field">
<% end %>

