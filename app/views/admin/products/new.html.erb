<h2 class="mt-3">商品新規登録</h2>
      <%= form_with model:@product,url:'admin/products',local:true do |f|%>
      <label for="product_image">商品画像</label>
      <%= f.attachment_field :profile_image, class: "form-control-file" %>
      <div class="form-group">
        <label for="product_name">商品名</label><br>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <label for="product_introduction">商品説明</label><br>
        <%= f.text_area :introduction %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
        
      　<div class="field">
  　 <%= form.label :genre %>
  　 <%= form.select :genre, ['小説', 'プログラミング', 'ビジネス'], {include_blank: '---'} %>
  　  
  　  <%= f.number_field :price %>
  　 </div>
  　 
    <%= form.radio_button :is_active, :true, checked: true %>
    <%= form.label :is_active, "販売中", {value: :true} %>
    <%= form.radio_button :is_active, :false %>
    <%= form.label :is_active, "販売停止中", {value: :false} %>
    </div>
    <%= f.submit :button, class: "btn" %
<% end %>
      
     