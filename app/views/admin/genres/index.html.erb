<h1>ジャンル一覧・追加</h1>
<br></br>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ジャンル名</th>
        <%= form_with model: @genre,url: admin_genres_path,local: true do |f|%>
      <th>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
      </th>
      <th>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </th>
        <% end %>
    </tr>
  </thead>

  <thead>
    <tr>
      <td>ジャンル</td>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td>
        <%= link_to "編集する", edit_admin_genre_path(genre.id),class: "btn btn-sm btn-success" %>
      </td>
      <td>
        <%= link_to "削除", admin_genre_path(genre.id),method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: "btn btn-sm btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>