<h2><%= @customer.first_name %> <%= @customer.last_name %>さんの会員情報編集</h2>

<%= form_with model:@customer, url:admin_customer_path(@customer),local:true do |f| %>
  <table>
    <tr><th>会員ID</th><td><%= @customer.id %></td></tr>
    <tr><th>氏名</th><td><%= f.text_field :first_name, autofocus: true %><%= f.text_field :last_name %></td></tr>
    <tr><th>フリガナ</th><td><%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %></td></tr>
    <tr><th>郵便番号</th><td><%= f.text_field :postal_code %></td></tr>
    <tr><th>住所</th><td><%= f.text_field :address %></td></tr>
    <tr><th>電話番号</th><td><%= f.text_field :phone_number %></td></tr>
    <tr><th>メールアドレス</th><td><%= f.text_field :email %></td></tr>
    <tr>
      <th>会員ステータス</th>
        <td>
          <label><%= f.radio_button :is_deleted, :true, checked: true %><%= f.label :is_deleted, "有効", value: true %></label>
          <label><%= f.radio_button :is_deleted, :false %><%= f.label :is_deleted, "退会", value: :false %></label>
        </td>
    </tr>
  </table>
    <%= f.submit "変更を保存する", class: "btn btn-success" %>
<% end %>
