
<h2><%= @customer.first_name %> <%= @customer.last_name %>さんの会員詳細</h2><br>

<table>
  <tr>
   <th>会員id</th><td><%= @customer.id %></td>
  </tr>
  <tr>
   <th>氏名</th><td><%= @customer.first_name %> <%= @customer.last_name %></td>
  </tr>
  <tr>
   <th>フリガナ</th><td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
  </tr>
  <tr>
   <th>郵便番号</th><td><%= @customer.postal_code %></td>
  </tr>
  <tr>
   <th>住所</th><td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th><td><%= @customer.phone_number %></td>
  </tr>
  <tr>
   <th>メールアドレス</th><td><%= @customer.email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <% if @customer.is_deleted == true %>
      <td class="text-success">有効</td>
    <% else %>
      <td class="text-secondary">退会</td>
    <% end %>
  </tr>
  <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
 
</table>