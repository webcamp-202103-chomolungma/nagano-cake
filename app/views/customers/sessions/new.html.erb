
  <h2>カスタマーのログイン</h2>

  <h4>会員の方はこちらからログイン</h4>

  <%= form_with(model:resource, as: resource_name, url: customer_session_path, local: true) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    </div>

    <div class="form-group row">
        <%= f.label :パスワード, class:"col-sm-3 col-form-label" %>
      <div class="col-sm-5">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control"  %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "ログイン",class:"btn btn-primary col-sm-2 offset-sm-3" %>
    </div>
  <% end %>


  <!--<%= render "devise/shared/links" %>-->
  <h7 class= "toptext text-center">会員登録がお済みでない方</h7>
  <div class="row">
    <div class="offset-sm-2">
      <p><%= link_to "こちら", new_customer_registration_path %>から新規登録を行って下さい。</p>
    </div>
  </div>
  

